<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--- מידע על היום הנוכחי ---"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שעה"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHebrewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תאריך עברי"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewParsha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פרשה"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewSunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="זריחה"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewSunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שקיעה"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ה- DatePicker לא עובד טוב כרגע"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_open_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בחר תאריך עברי" />

    <TextView
        android:id="@+id/textViewSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="טרם נבחר תאריך"
        android:textSize="22sp"
        android:textStyle="bold" />


</LinearLayout>